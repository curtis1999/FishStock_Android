<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/promotionRook"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:background="#FFFFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/gridlayout"
        app:layout_constraintEnd_toStartOf="@+id/promotionBishop"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CapturedPiecesBlack"
        app:layout_constraintVertical_bias="0.2"
        app:srcCompat="@drawable/promotion_rook_white" />

    <ImageButton
        android:id="@+id/promotionKnight"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:background="#FFFFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/gridlayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CapturedPiecesBlack"
        app:layout_constraintVertical_bias="0.2"
        app:srcCompat="@drawable/promotion_knight_white" />

    <ImageButton
        android:id="@+id/promotionQueen"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:background="#FFFFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/gridlayout"
        app:layout_constraintEnd_toStartOf="@+id/promotionRook"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CapturedPiecesBlack"
        app:layout_constraintVertical_bias="0.2"
        app:srcCompat="@drawable/promotion_queen_white" />
    <ImageButton
        android:id="@+id/promotionBishop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:background="#FFFFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/gridlayout"
        app:layout_constraintEnd_toStartOf="@+id/promotionKnight"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CapturedPiecesBlack"
        app:layout_constraintVertical_bias="0.2"
        app:srcCompat="@drawable/promotion_bishop_white" />

</LinearLayout>
