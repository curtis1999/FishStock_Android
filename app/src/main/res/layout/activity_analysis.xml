        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@+id/move1Label"
        app:layout_constraintBottom_toBottomOf="@+id/move1Label"
