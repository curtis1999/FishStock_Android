    <!-- Evaluation Bar Container -->
    <FrameLayout
        android:id="@+id/evaluationBarContainer"
        android:layout_width="40dp"
        android:layout_height="400dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp">

        <!-- Black background (bottom half initially) -->
        <View
            android:id="@+id/evalBarBlack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000" />

        <!-- White overlay (top half initially) -->
        <View
            android:id="@+id/evalBarWhite"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="top"
            android:background="#FFFFFF" />

        <!-- Evaluation text (centered) -->
        <TextView
            android:id="@+id/evalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0.0"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#808080"
            android:rotation="270" />
